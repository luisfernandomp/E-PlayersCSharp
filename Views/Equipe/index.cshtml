@model Equipe
@{
    ViewData["Title"] = "Equipes";
}
<form method="POST" action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdEquipe" />

    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>Imagem</label>
    <input type="file" name="Imagem" id="Imagem">
    

    <button type="submit">Cadastrar</button>   
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (Equipe item in ViewBag.Equipes)
        {
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td>
                    <img src="img/Equipes/@item.Imagem" alt="Imagem da Equipe @item.Nome"/>
                </td>
                <td>
                    
                    <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.IdEquipe">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>